<div class="jumbotron">
  <div class="display-4">
    What you want to learn?
  </div>
  <p class="py-4"></p>
  <div class="form-inline my-2 my-lg-0">
    <%= form_tag(courses_path, method: :get) do %>
      <div class="input-group">
        <%= text_field_tag :name, params[:name], autocomplete: 'off', placeholder: "Find a course", class: 'form-control-lg' %>
        <span class="input-group-append">
          <button class="btn btn-primary btn-lg" type="submit">
            <span aria-hidden="true" class="fa fa-search"></span>
          </button>
        </span>
      </div>
    <% end %>
  </div>
</div>
<div class="card-group">
  <div class="card card-body">
    <h1>
      <div class="fa fa-graduation-cap"></div>
    </h1>
    <%= Course.published.approved.count %>
    online courses
    <div class="row"></div>
    Explore a variety of fresh topics
  </div>
  <div class="card card-body">
    <h1>
      <div class="fa fa-chalkboard-teacher"></div>
      <!--.fa.fa-brain
      -->
    </h1>
    <%= Course.distinct.count(:user_id) %>
    expert instructors
    <div class="row"></div>
    Find the right instructor for you
  </div>
  <div class="card card-body">
    <h1>
      <div class="fa fa-user-graduate"></div>
    </h1>
    <%= User.count %>
    active learners
    <div class="row"></div>
    Join the knowledge sharing community
  </div>
  <div class="card card-body">
    <h1>
      <div class="fa fa-infinity"></div>
    </h1>
    Lifetime access
    <div class="row"></div>
    Learn on your schedule
  </div>
</div>
<br/>
<% if current_user %>
  <div class="text-white">
    <h3>
      <div class="fa fa-user-graduate"></div>
      Continue learning
    </h3>
  </div>
  <div class="card-columns">
    <% @purchased_courses.each do |course| %>
      <%= render 'courses/course', course: course %>
    <% end %>
  </div>
  <div class="text-right">
    <%= link_to purchased_courses_path do %>
      All my courses
    <% end %>
  </div>
  <hr class="bg-light"/>
<% end %>
<div class="text-white">
  <h3>
    <div class="fa fa-chart-line"></div>
    Popular courses
  </h3>
</div>
<div class="card-columns">
  <% @popular_courses.each do |course| %>
    <%= render 'courses/course', course: course %>
  <% end %>
</div>
<div class="text-right">
  <%= link_to popular_courses_path do %>
    More popular courses
  <% end %>
</div>
<hr class="bg-light"/>
<div class="text-white">
  <h3>
    <div class="fa fa-star"></div>
    Top rated courses
  </h3>
</div>
<div class="card-columns">
  <% @top_rated_courses.each do |course| %>
    <%= render 'courses/course', course: course %>
  <% end %>
</div>
<div class="text-right">
  <%= link_to top_rated_courses_path do %>
    More top rated courses
  <% end %>
</div>
<hr class="bg-light"/>
<div class="text-white">
  <h3>
    <div class="fa fa-clock"></div>
    Latest courses
  </h3>
</div>
<div class="card-columns">
  <% @latest_courses.each do |course| %>
    <%= render 'courses/course', course: course %>
  <% end %>
</div>
<div class="text-right">
  <%= link_to latest_courses_path do %>
    More latest courses
  <% end %>
</div>
<hr class="bg-light"/>
<div class="text-white">
  <h3>
    <div class="fa fa-chart-line"></div>
    Popular categories
  </h3>
</div>
<div class="card-columns">
  <% @popular_categories.each do |category| %>
    <%= render 'categories/category', category: category %>
  <% end %>
</div>
<div class="text-right">
  <%= link_to categories_path do %>
    More popular categories
  <% end %>
</div>
<hr class="bg-light"/>
<div class="text-white">
  <h3>
    <div class="fa fa-comment"></div>
    What our students have to say
  </h3>
</div>
<div class="card-columns">
  <% @latest_good_subscriptions.each do |subscription| %>
    <%= render 'subscriptions/subscription', subscription: subscription %>
  <% end %>
</div>