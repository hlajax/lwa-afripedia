<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <h4>
          <div class="fa fa-graduation-cap"></div>
          <%= link_to @subscription.course.name, course_path(@subscription.course) %>
          <hr/>
          <div class="text-warning fa fa-star"></div>
          Add a Review
        </h4>
      </div>
      <div class="card-body">
        <%= render 'form' %>
      </div>
      <div class="card-footer">
        <%= link_to 'Cancel', course_path(@subscription.course) %>
      </div>
    </div>
  </div>
</div>
